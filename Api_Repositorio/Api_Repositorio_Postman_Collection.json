	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Script de pre-request para validar variables de entorno",
					"if (!pm.environment.get('base_url')) {",
					"    console.warn('Variable base_url no está definida. Usando valor por defecto.');",
					"    pm.environment.set('base_url', 'http://localhost:8081');",
					"}",
					"",
					"if (!pm.environment.get('auth_token')) {",
					"    console.warn('Variable auth_token no está definida. Algunos endpoints pueden fallar.');",
					"}"
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Script de test para extraer automáticamente el token de autenticación",
					"if (pm.response.code === 200 && pm.request.url.path.includes('/api/auth/login')) {",
					"    try {",
					"        const responseJson = pm.response.json();",
					"        if (responseJson.token) {",
					"            pm.environment.set('auth_token', responseJson.token);",
					"            console.log('Token de autenticación guardado automáticamente');",
					"        }",
					"    } catch (e) {",
					"        console.error('Error al procesar respuesta de login:', e);",
					"    }",
					"}",
					"",
					"// Validar que la respuesta sea exitosa",
					"pm.test('Status code is 200 or 201', function () {",
					"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
					"});",
					"",
					"// Validar tiempo de respuesta",
					"pm.test('Response time is less than 5000ms', function () {",
					"    pm.expect(pm.response.responseTime).to.be.below(5000);",
					"});"
				]
			}
		}
